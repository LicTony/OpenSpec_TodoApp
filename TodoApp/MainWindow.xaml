<Window x:Class="TodoApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TodoApp"
        xmlns:services="clr-namespace:TodoApp.Services"
        xmlns:models="clr-namespace:TodoApp.Models"
        xmlns:sys="clr-namespace:System;assembly=mscorlib"
        mc:Ignorable="d"
        Title="Todo App" Height="450" Width="800" WindowState="Maximized">
    <Window.Resources>
        <ObjectDataProvider x:Key="FiltroTareasValues"
                            MethodName="GetValues"
                            ObjectType="{x:Type sys:Enum}">
            <ObjectDataProvider.MethodParameters>
                <x:Type TypeName="services:FiltroTareas"/>
            </ObjectDataProvider.MethodParameters>
        </ObjectDataProvider>
        <ObjectDataProvider x:Key="PrioridadValues"
                            MethodName="GetValues"
                            ObjectType="{x:Type sys:Enum}">
            <ObjectDataProvider.MethodParameters>
                <x:Type TypeName="models:Prioridad"/>
            </ObjectDataProvider.MethodParameters>
        </ObjectDataProvider>
        <ObjectDataProvider x:Key="OrdenTareasValues"
                            MethodName="GetValues"
                            ObjectType="{x:Type sys:Enum}">
            <ObjectDataProvider.MethodParameters>
                <x:Type TypeName="services:OrdenTareas"/>
            </ObjectDataProvider.MethodParameters>
        </ObjectDataProvider>
    </Window.Resources>

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <TextBlock Text="Todo App" FontSize="32" FontWeight="Bold" Margin="0,0,0,20" Foreground="#333"/>

        <!-- Input Area -->
        <Grid Grid.Row="1" Margin="0,0,0,20">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            <TextBox Text="{Binding NuevaTareaDescripcion, UpdateSourceTrigger=PropertyChanged}" 
                     FontSize="16" Padding="10" VerticalContentAlignment="Center"
                     BorderBrush="#DDD" BorderThickness="1">
                <TextBox.InputBindings>
                    <KeyBinding Key="Enter" Command="{Binding AgregarTareaCommand}"/>
                </TextBox.InputBindings>
            </TextBox>
            <ComboBox Grid.Column="1" ItemsSource="{Binding Source={StaticResource PrioridadValues}}"
                      SelectedItem="{Binding NuevaTareaPrioridad}"
                      Width="100" Margin="10,0,0,0" VerticalContentAlignment="Center" Padding="5" 
                      ToolTip="Prioridad"/>
            <Button Grid.Column="2" Content="Add Task" Command="{Binding AgregarTareaCommand}" 
                    Padding="20,10" Margin="10,0,0,0" Background="#007ACC" Foreground="White" BorderThickness="0"/>
        </Grid>

        <!-- Filter Bar -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,0,0,10">
            <TextBlock Text="Order:" VerticalAlignment="Center" Margin="0,0,10,0" Foreground="#666"/>
            <ComboBox ItemsSource="{Binding Source={StaticResource OrdenTareasValues}}"
                      SelectedItem="{Binding OrdenActual}"
                      Width="120" VerticalContentAlignment="Center" Padding="5" Margin="0,0,20,0"/>

            <TextBlock Text="Filter:" VerticalAlignment="Center" Margin="0,0,10,0" Foreground="#666"/>
            <ComboBox ItemsSource="{Binding Source={StaticResource FiltroTareasValues}}"
                      SelectedItem="{Binding FiltroActual}"
                      Width="120" VerticalContentAlignment="Center" Padding="5"/>
        </StackPanel>

        <!-- Task List -->
        <ListView Grid.Row="3" ItemsSource="{Binding Tareas}" BorderThickness="0" HorizontalContentAlignment="Stretch">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <Border x:Name="ItemContainer" BorderBrush="#EEE" BorderThickness="0,0,0,1" Padding="15,10" Background="White">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <CheckBox IsChecked="{Binding Completada}" 
                                      Command="{Binding DataContext.CambiarEstadoTareaCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                                      CommandParameter="{Binding}"
                                      VerticalAlignment="Center" Margin="0,0,15,0">
                                <CheckBox.LayoutTransform>
                                    <ScaleTransform ScaleX="1.2" ScaleY="1.2"/>
                                </CheckBox.LayoutTransform>
                            </CheckBox>

                            <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                <TextBlock x:Name="TaskDesc" Text="{Binding Descripcion}" FontSize="16" Foreground="#333"/>
                                
                                <Border x:Name="PriorityBadge" CornerRadius="4" Padding="6,2" HorizontalAlignment="Left" Margin="0,4,0,0">
                                    <TextBlock Text="{Binding Prioridad}" FontSize="11" Foreground="White" FontWeight="SemiBold"/>
                                </Border>
                            </StackPanel>

                            <StackPanel Grid.Column="2" Orientation="Horizontal" VerticalAlignment="Center">
                                <Button Content="✎" FontSize="16" FontWeight="Bold"
                                        Command="{Binding DataContext.EditarTareaCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                                        CommandParameter="{Binding}"
                                        Background="Transparent" Foreground="#007ACC" BorderThickness="0"
                                        Padding="8,5" Margin="5,0,0,0"
                                        ToolTip="Editar"/>

                                <Button Content="✕" FontSize="14" FontWeight="Bold"
                                        Command="{Binding DataContext.EliminarTareaCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                                        CommandParameter="{Binding}"
                                        Background="Transparent" Foreground="#FF5252" BorderThickness="0"
                                        Padding="8,5" Margin="5,0,0,0"
                                        ToolTip="Eliminar"/>
                            </StackPanel>
                        </Grid>
                    </Border>
                    
                    <DataTemplate.Triggers>
                        <!-- Completed Task State -->
                        <DataTrigger Binding="{Binding Completada}" Value="True">
                            <Setter TargetName="TaskDesc" Property="TextDecorations" Value="Strikethrough"/>
                            <Setter TargetName="TaskDesc" Property="Foreground" Value="#999"/>
                            <Setter TargetName="ItemContainer" Property="Opacity" Value="0.6"/>
                            <Setter TargetName="ItemContainer" Property="Background" Value="#FAFAFA"/>
                        </DataTrigger>
                        
                        <!-- Priority Colors -->
                        <DataTrigger Binding="{Binding Prioridad}" Value="Baja">
                            <Setter TargetName="PriorityBadge" Property="Background" Value="#66BB6A"/> <!-- Green -->
                        </DataTrigger>
                        <DataTrigger Binding="{Binding Prioridad}" Value="Media">
                            <Setter TargetName="PriorityBadge" Property="Background" Value="#FFA726"/> <!-- Orange -->
                        </DataTrigger>
                        <DataTrigger Binding="{Binding Prioridad}" Value="Alta">
                            <Setter TargetName="PriorityBadge" Property="Background" Value="#EF5350"/> <!-- Red -->
                        </DataTrigger>
                    </DataTemplate.Triggers>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </Grid>
</Window>
